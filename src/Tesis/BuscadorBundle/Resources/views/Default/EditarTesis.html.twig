<script>
    $(document).ready(function() {
        listarDisciplinas();
        listarFacultades();
        listarProgramas($("#codigoTesis").val(),{{  tesis.facultad }});
        volverLista();

        $('#facultades').on('change', function()
        {
            listarProgramas($("#codigoTesis").val(),$(this).find(":selected").val());
        });
    });
    function volverLista()
    {

    }
    function listarDisciplinas()
    {
        $.post(Routing.generate('listarDisciplinas'),
                {codigoTesis: $("#codigoTesis").val()},
                function(data)
                {
                    if(data.responseCode == 200 )
                    {
                        $('#disciplinas').html(data.DisciplinasHtml);
                    }
                }, "json");
    }
    function listarFacultades()
    {
        $.post(Routing.generate('listarFacultades'),
                {codigoTesis: $("#codigoTesis").val()},
                function(data)
                {
                    if(data.responseCode == 200 )
                    {
                        $('#facultades').html(data.FacultadesHtml);
                    }
                }, "json");
    }
    function listarProgramas()
    {
        $('#programas').html("<option>Cargando...</option>");
        var codigoTesis = arguments[0];
        var facultad = arguments[1];

        $.post(Routing.generate('listarProgramas'),
                {
                    codigoTesis: codigoTesis,
                    IdFacultad: facultad
                },
                function(data)
                {
                    if(data.responseCode == 200 && data.ProgramasHtml)
                    {
                        $('#programas').html(data.ProgramasHtml);
                    }
                    else
                    {
                        $('#programas').html("<option>SIN ESCUELA PROFESIONAL</option>");
                    }
                }, "json");
    }

</script>
